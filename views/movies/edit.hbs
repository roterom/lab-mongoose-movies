<div class="container">
    <div class="row"></div>
    <h2 class="py-5">Edit movie</h2>
</div>
<div class="container">
<form action="/movies/{{ movie.id }}/edit" method="post">
    <div class="form-group my-4">
        <label for="movie-title">Title</label>
        <input type="text" class="form-control" name="title" value="{{ movie.title }}" id="movie-title" placeholder="Enter title">
    </div>
    <div class="form-group my-4">
        <label for="genre">Genre</label>
        <input type="text" class="form-control" name="genre" value="{{ movie.genre }}" id="genre" placeholder="Enter genre">
    </div>
    <div class="form-group my-4">
        <label for="plot">Plot</label>
        <textarea class="form-control" name="plot" rows=3>{{ movie.plot }}</textarea>
    </div>
    <div class="form-group my-4">
        <label for="author">Celebrity</label>
        <select class="form-control" name="celebrity">
            <option value="{{ movie.celebrity.name }}" selected disabled>{{ movie.celebrity.name }}</option>
            {{#each celebrities as |celebrity|}}
                <option value="{{ celebrity.id }}">{{celebrity.name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="submit" class="btn btn-primary my-3">Save</button>
    </form>
</div>