<div class="container-fluid pt-5">
  <div class="m-5"></div>
  <div class="row">
    <h2 class="m-3">CELEBRITIY DETAILS</h2>
  </div>
</div>

<div class="container details">
  <div class="media row">
    <img src="{{ celebrity.photo }}" class="align-self-center mr-3 col-4" alt="...">
    <div class="media-body col-8">
      <div class="mt-0 row py-4">
        <label class="col-3">Name: </label>
        <span class="col-9">{{ celebrity.name }}</span>
      </div>
      <div class="row py-4">
      <label class="col-3">Occupation: </label>
      <span class="col-9">{{ celebrity.occupation }}</span>
    </div>
    <div class="row mb-0 py-4">
      <label class="col-3">Catch Phrase: </label>
      <span class="col-9">{{ celebrity.catchPhrase }}</span>
    </div>
    
    </div>
  </div>
  <div class="row justify-content-around">
    <a class="my-5 font-weight-bold text-right btn btn-secondary" href="/celebrities">Back to celebrities list</a>
    <a class="my-5 font-weight-bold text-right btn btn-secondary" href="/movies">Back to movies list</a>
  </div>
</div>